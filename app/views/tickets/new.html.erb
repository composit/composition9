<h1>New ticket</h1>

<%= form_for(@ticket) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :project_id %><br />
    <%= f.text_field :project_id %>
  </p>
  <p>
    <%= f.label :created_by_user_id %><br />
    <%= f.text_field :created_by_user_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :closed_date %><br />
    <%= f.datetime_select :closed_date %>
  </p>
  <p>
    <%= f.label :estimated_hours %><br />
    <%= f.text_field :estimated_hours %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', tickets_path %>
