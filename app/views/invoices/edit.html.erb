<h1>Editing invoice</h1>

<%= form_for( @invoice ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :client_id %><br />
    <%= f.text_field :client_id %>
  </p>
  <p>
    <%= f.label :invoice_date %><br />
    <%= f.date_select :invoice_date %>
  </p>
  <p>
    <%= f.label :paid_date %><br />
    <%= f.date_select :paid_date %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @invoice %> |
<%= link_to 'Back', invoices_path %>
